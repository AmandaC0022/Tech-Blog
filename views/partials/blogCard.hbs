{{!-- This creates a blog template so that all blogs are styled the same way --}}
<div class="card custom-card">
    <div class="card-content custom-card-content white-text">
        <div class="card-title custom-card-title">
            <h2>{{title}}</h2>
            <p>Posted by {{user.name}} on {{format_date date_created}} </p>
        </div>
    <p>{{content}}</p>
    <a href="/blogs/{{id}}">Read More</a>
    {{#if isAuthor}}
        <i class="fa fa-pencil"></i><a href="/blogs/edit/{{id}}">Edit</a>
        <Button>Delete</Button>
    {{/if}}
    </div>
</div>