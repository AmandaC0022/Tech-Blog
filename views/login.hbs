{{!-- This is the login page --}}
<form class="col s12 login-form">
    <div class="form-container">
        <h1 class="form-header">Login</h1>
        <div class="input-field col s12">
            <input id="user-email" type="email" required="required" placeholder="Email">
        </div>
        <div class="input-field col s12">
            <input id="user-password" type="password" required="required" placeholder="Password">
        </div>
        <div class="col s12 center">
            <button type="submit" class="btn-large save-btn">Login</button>
        </div>
        <div>
          <p>Don't have an account?</p>
          <a href="/register" class="col s12 sign-up">Sign Up Here</a>
        </div>
    </div>
</form>